# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
charset = utf-8
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.styl]
indent_size = 2
indent_style = space

[*.tss]
indent_size = 2
indent_style = space

[*.md]
trim_trailing_whitespace = false

[{.travis.yml,npm-shrinkwrap.json,package.json}]
indent_size = 2
indent_style = space
